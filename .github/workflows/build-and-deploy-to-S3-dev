name: 'Preview Site: Build and Deploy to Netlify'

on:
  push:
    branches: [ 'develop' ]
    paths: ['pulter-site/**', 'pulter-poems/**']

jobs:
  build-and-deploy:
    runs-on: macos-latest
    steps:
      - name: Check out the repo
        uses: actions/checkout@v1
        with:
          submodules: true

      - name: Prepare Node 18
        uses: actions/setup-node@v1
        with:
          node-version: '18.x'

      - run: yarn
      - run: npm i -g gulp-cli@latest
      - run: npm run build

      - name: Deploy to S3
        uses: shallwefootball/upload-s3-action@v1.3.3
        with:
          publish-dir: 'dist'
          production-deploy: true
          deploy-message: Triggered from Github Actions by @${{ github.actor }}.
        env:
          aws_key_id: ${{ secrets.AWS_KEY_ID_dev }}
          aws_secret_access_key: ${{ secrets.AWS_SECRET_ACCESS_KEY_dev}}
          aws_bucket: ${{ secrets.AWS_BUCKET_dev }}
          source_dir: 'dirname'
        timeout-minutes: 1
